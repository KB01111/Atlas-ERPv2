# Atlas ERP v2 Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
PUBLIC_SUPABASE_URL=your_supabase_project_url
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration
DATABASE_URL=your_supabase_database_url

# ArangoDB Configuration (for Knowledge Graph)
ARANGODB_URL=http://localhost:8529
ARANGODB_DATABASE=atlas_erp
ARANGODB_USERNAME=root
ARANGODB_PASSWORD=your_arangodb_password

# MinIO Configuration (for File Storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=atlas-erp-documents
MINIO_USE_SSL=false

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint

# CopilotKit Configuration
COPILOTKIT_API_KEY=your_copilotkit_api_key

# Temporal Configuration (for Workflows)
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Redis Configuration (for Caching)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@atlas-erp.com

# Security Configuration
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# External Integrations
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_SIGNING_SECRET=your_slack_signing_secret
GITHUB_TOKEN=your_github_token
PIPEDREAM_API_KEY=your_pipedream_api_key

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=your_google_analytics_id
SENTRY_DSN=your_sentry_dsn

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_WORKFLOWS=true
ENABLE_ANALYTICS=true
ENABLE_INTEGRATIONS=true
