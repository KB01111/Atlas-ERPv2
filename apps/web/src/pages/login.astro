---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm.tsx';
---

<Layout title="Login - Atlas ERP v2">
  <main class="min-h-screen flex items-center justify-center bg-background p-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-2">Atlas ERP v2</h1>
        <p class="text-muted-foreground">Sign in to your account</p>
      </div>
      
      <LoginForm client:load />
      
      <div class="mt-8 text-center">
        <p class="text-sm text-muted-foreground">
          New to Atlas ERP?{' '}
          <a href="/register" class="text-primary hover:underline">
            Create an account
          </a>
        </p>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Handle successful login
  window.addEventListener('DOMContentLoaded', () => {
    // Check if user is already logged in
    const session = localStorage.getItem('supabase_session');
    if (session) {
      // Redirect to dashboard if already logged in
      window.location.href = '/';
    }
  });
</script>
