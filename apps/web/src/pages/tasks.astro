---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import Navigation from '../components/Navigation.tsx';
---

<DashboardLayout title="Tasks - Atlas ERP v2">
  <Navigation slot="navigation" client:load />
  
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold">Tasks</h1>
      <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2">
        + New Task
      </button>
    </div>

    <!-- Task Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
        <div class="flex flex-col">
          <span class="text-sm font-medium text-muted-foreground">Total Tasks</span>
          <span class="text-2xl font-bold">387</span>
        </div>
      </div>
      <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
        <div class="flex flex-col">
          <span class="text-sm font-medium text-muted-foreground">In Progress</span>
          <span class="text-2xl font-bold text-blue-600">156</span>
        </div>
      </div>
      <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
        <div class="flex flex-col">
          <span class="text-sm font-medium text-muted-foreground">Completed</span>
          <span class="text-2xl font-bold text-green-600">198</span>
        </div>
      </div>
      <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
        <div class="flex flex-col">
          <span class="text-sm font-medium text-muted-foreground">Overdue</span>
          <span class="text-2xl font-bold text-red-600">33</span>
        </div>
      </div>
    </div>

    <!-- Task Filters -->
    <div class="flex space-x-4">
      <button class="px-4 py-2 bg-primary text-primary-foreground rounded-md text-sm">All Tasks</button>
      <button class="px-4 py-2 border rounded-md text-sm hover:bg-accent">My Tasks</button>
      <button class="px-4 py-2 border rounded-md text-sm hover:bg-accent">High Priority</button>
      <button class="px-4 py-2 border rounded-md text-sm hover:bg-accent">Due Today</button>
    </div>

    <!-- Tasks List -->
    <div class="rounded-xl border bg-card text-card-foreground shadow">
      <div class="p-6">
        <h2 class="text-xl font-semibold mb-4">Recent Tasks</h2>
        <div class="space-y-3">
          <div class="flex items-center space-x-4 p-3 border rounded-lg hover:bg-accent/50">
            <input type="checkbox" class="w-4 h-4" />
            <div class="flex-1">
              <h3 class="font-medium">Update user authentication system</h3>
              <p class="text-sm text-muted-foreground">Implement OAuth 2.0 and improve security</p>
            </div>
            <div class="flex items-center space-x-2">
              <span class="px-2 py-1 bg-red-100 text-red-800 rounded-full text-xs">High</span>
              <span class="text-sm text-muted-foreground">Due: Today</span>
            </div>
          </div>
          
          <div class="flex items-center space-x-4 p-3 border rounded-lg hover:bg-accent/50">
            <input type="checkbox" class="w-4 h-4" />
            <div class="flex-1">
              <h3 class="font-medium">Design new dashboard components</h3>
              <p class="text-sm text-muted-foreground">Create wireframes and mockups for v2.0</p>
            </div>
            <div class="flex items-center space-x-2">
              <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs">Medium</span>
              <span class="text-sm text-muted-foreground">Due: Dec 20</span>
            </div>
          </div>
          
          <div class="flex items-center space-x-4 p-3 border rounded-lg hover:bg-accent/50">
            <input type="checkbox" checked class="w-4 h-4" />
            <div class="flex-1 opacity-60">
              <h3 class="font-medium line-through">Setup CI/CD pipeline</h3>
              <p class="text-sm text-muted-foreground">Configure automated testing and deployment</p>
            </div>
            <div class="flex items-center space-x-2">
              <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Completed</span>
              <span class="text-sm text-muted-foreground">Completed: Dec 10</span>
            </div>
          </div>
          
          <div class="flex items-center space-x-4 p-3 border rounded-lg hover:bg-accent/50">
            <input type="checkbox" class="w-4 h-4" />
            <div class="flex-1">
              <h3 class="font-medium">Write API documentation</h3>
              <p class="text-sm text-muted-foreground">Document all endpoints and provide examples</p>
            </div>
            <div class="flex items-center space-x-2">
              <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">Low</span>
              <span class="text-sm text-muted-foreground">Due: Dec 25</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
